<mt:Var name="identifier" value="category-listing">
<mt:SetVarBlock name="html_title"><mt:IndexCategoriesTitle></mt:SetVarBlock>
<mt:Include module="Header">

<div class="entry-header">
    <h1><mt:Var name="html_title"></h1>
    <mt:IndexCategoriesText filters="markdown_with_smartypants">
</div>

<div class="category-listing">
<mt:TopLevelCategories>
    <mt:SubCatIsFirst>
    <ul>
    </mt:SubCatIsFirst>
    <mt:If tag="CategoryCount">
        <li><a href="<mt:CategoryArchiveLink>"><mt:CategoryLabel smarty_pants="1"></a> (contains <mt:CategoryCount> entries)
    </mt:If>
    <mt:SubCatsRecurse>
        </li>
    <mt:SubCatIsLast>
    </ul>
    </mt:SubCatIsLast>
</mt:TopLevelCategories>
</div>

<mt:Include module="Footer">
